{
  "port": 3458,
  "dataDir": "./data",
  "auth": {
    "type": "invite-code",
    "codes": {
      "demo-code": "DemoUser"
    }
  },
  "webhook": {
    "url": "",
    "events": ["item.created", "item.resolved", "item.assigned"],
    "secret": ""
  },
  "distribution": {
    "rules": [
      {
        "match": { "event": "item.created", "type": "issue", "priority": ["high", "critical"] },
        "channels": ["lark-dev"]
      },
      {
        "match": { "event": "item.created", "type": "comment" },
        "channels": ["webhook-default"]
      },
      {
        "match": { "event": "item.resolved" },
        "channels": ["webhook-default"]
      },
      {
        "match": { "event": "item.created", "priority": ["high", "critical"] },
        "channels": ["telegram-alerts"]
      },
      {
        "match": { "event": "item.created", "type": "issue" },
        "channels": ["github-bugs"]
      },
      {
        "match": { "event": "item.resolved" },
        "channels": ["github-bugs"]
      },
      {
        "match": { "event": "item.closed" },
        "channels": ["github-bugs"]
      }
    ],
    "channels": {
      "lark-dev": {
        "adapter": "lark",
        "webhook_url": "https://open.larksuite.com/open-apis/bot/v2/hook/YOUR_HOOK_ID"
      },
      "webhook-default": {
        "adapter": "webhook",
        "url": "https://your-service.com/webhook",
        "secret": ""
      },
      "telegram-alerts": {
        "adapter": "telegram",
        "bot_token": "123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11",
        "chat_id": "-100123456789",
        "parse_mode": "MarkdownV2"
      },
      "github-bugs": {
        "adapter": "github-issue",
        "token": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        "repo": "your-org/your-repo",
        "labels": ["clawmark", "bug"],
        "assignees": []
      }
    }
  }
}
