{
  "port": 3458,
  "dataDir": "./data",
  "auth": {
    "type": "invite-code",
    "codes": {
      "demo-code": "DemoUser"
    }
  },
  "webhook": {
    "url": "",
    "events": ["item.created", "item.resolved", "item.assigned"],
    "secret": ""
  },
  "distribution": {
    "rules": [
      {
        "match": { "event": "item.created", "type": "issue", "priority": ["high", "critical"] },
        "channels": ["lark-dev"]
      },
      {
        "match": { "event": "item.created", "type": "comment" },
        "channels": ["webhook-default"]
      },
      {
        "match": { "event": "item.resolved" },
        "channels": ["webhook-default"]
      }
    ],
    "channels": {
      "lark-dev": {
        "adapter": "lark",
        "webhook_url": "https://open.larksuite.com/open-apis/bot/v2/hook/YOUR_HOOK_ID"
      },
      "webhook-default": {
        "adapter": "webhook",
        "url": "https://your-service.com/webhook",
        "secret": ""
      }
    }
  }
}
